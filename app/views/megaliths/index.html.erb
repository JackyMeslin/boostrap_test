<p id="notice"><%= notice %></p>

<h1>Megaliths</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Category</th>
      <th>Description</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @megaliths.each do |megalith| %>
      <tr>
        <td><%= image_tag megalith.photo,  style: 'height:50px;',alt: "..." %></td>
        <td><%= megalith.name %></td>
        <td><%= megalith.address %></td>
        <td><%= megalith.city %></td>
        <td><%= megalith.category %></td>
        <td><%= megalith.description %></td>
        <td><%= megalith.latitude %></td>
        <td><%= megalith.longitude %></td>
        <td><%= link_to 'Show', megalith %></td>
        <td><%= link_to 'Edit', edit_megalith_path(megalith) %></td>
        <td><%= link_to 'Destroy', megalith, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

